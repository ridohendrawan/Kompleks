<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/KembaliMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:background="@drawable/arrow_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/judulMainMenu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:contentDescription="@string/main_menu_desc"
            android:src="@drawable/logoputih3"
            app:layout_constraintTop_toBottomOf="@id/KembaliMenu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/cvbg"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/judulMainMenu">

            <Button
                android:id="@+id/formbaru"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="75dp"
                android:background="@drawable/button2"
                android:text="@string/main_menu_btnOne"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/daftartamu"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/button2"
                android:text="@string/main_menu_btnTwo"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/daftarTamuSelesai"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/button2"
                android:text="@string/main_menu_btnThree"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/panduanpengguna"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button2"
                android:text="@string/main_menu_btnFour"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
