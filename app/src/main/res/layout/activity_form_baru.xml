<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0d6e6a">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0d6e6a"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/KembaliMenu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:background="@drawable/arrow_left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUAT FORM TAMU"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:letterSpacing="0.03"/>

    <View
        android:layout_height="2dp"
        android:layout_width="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#ffff"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Tamu"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:layout_gravity="left"
        android:layout_marginLeft="70dp"
        android:letterSpacing="0.03"/>

    <EditText
        android:inputType="textPersonName"
        android:hint="Nama Tamu"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/forget2"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tujuan Kunjugan"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:layout_gravity="left"
        android:layout_marginLeft="70dp"
        android:letterSpacing="0.03"
        android:layout_marginTop="8dp"/>

    <EditText
        android:inputType="textPersonName"
        android:hint="Tujuan Kunjugan"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/forget2"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plat Nomor Kendaraan"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:layout_gravity="left"
        android:layout_marginLeft="70dp"
        android:letterSpacing="0.03"
        android:layout_marginTop="8dp"/>

    <EditText
        android:inputType="textPersonName"
        android:hint="Plat Nomor Kendaraan"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/forget2"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam Masuk"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:layout_gravity="left"
        android:layout_marginLeft="70dp"
        android:letterSpacing="0.03"
        android:layout_marginTop="8dp"/>

    <EditText
        android:inputType="textPersonName"
        android:hint="13:00 - 07-04-2021"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/forget2"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/camera"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="-55dp"
            android:background="@drawable/button_putih"
            android:text="Upload Foto"
            android:textColor="#0d6e6a"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_height="2dp"
        android:layout_width="280dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#ffff"
        android:background="@android:color/darker_gray"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button3"
        android:text="Submit"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="25dp"/>


</LinearLayout>
</ScrollView>