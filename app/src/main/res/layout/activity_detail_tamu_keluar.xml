<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailDaftarTamu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0d6e6a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnKembali"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:letterSpacing="0.03"
            android:text="@string/detail_tamu_title_keluar"
            android:textAllCaps="true"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#ffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:letterSpacing="0.03"
            android:text="@string/detail_tamu_name"
            android:textColor="#ffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailTamuName"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/forget2"
            android:hint="@string/detail_tamu_name"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.03"
            android:text="@string/detail_tamu_tujuan"
            android:textColor="#ffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailTamuTujuan"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/forget2"
            android:hint="@string/detail_tamu_tujuan"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.03"
            android:text="@string/detail_tamu_plat"
            android:textColor="#ffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailTamuPlat"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/forget2"
            android:hint="@string/detail_tamu_plat"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.03"
            android:text="@string/detail_tamu_jamMasuk"
            android:textColor="#ffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailTamuJamMasuk"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/forget2"
            android:hint="@string/detail_tamu_jamMasuk"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.03"
            android:text="@string/detail_tamu_jamKeluar"
            android:textColor="#ffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailTamuJamKeluar"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/forget2"
            android:hint="@string/detail_tamu_jamKeluar"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.03"
            android:text="@string/detail_tamu_status"
            android:textColor="#ffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailStatusTamu"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/forget2"
            android:hint="@string/detail_tamu_status"
            android:paddingLeft="20dp"
            android:textColor="#0d6e6a"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.03"
            android:text="@string/detail_tamu_foto"
            android:textColor="#ffff"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fotoTamu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/detail_tamu_fotoDesc"
                android:scaleType="center" />
        </LinearLayout>

        <View
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="0dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#ffff" />
    </LinearLayout>
</ScrollView>